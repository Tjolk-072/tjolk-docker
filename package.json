{
  "name": "neon-local",
  "displayName": "Neon Local",
  "description": "Local development environment for Neon Database with branch management",
  "version": "0.0.1",
  "publisher": "neon",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:neon-local.configure",
    "onCommand:neon-local.showPanel",
    "onCommand:neon-local.stopProxy",
    "onCommand:neon-local.clearAuth",
    "onView:neonLocalConnect",
    "onView:neonLocalDatabase",
    "onView:neonLocalActions"
  ],
  "main": "./dist/extension.js",
  "icon": "resources/neon_logo.svg",
  "contributes": {
    "commands": [
      {
        "command": "neonLocal.signIn.triggerSignIn",
        "title": "Neon Local: Trigger Sign In"
      },
      {
        "command": "neon-local.configure",
        "title": "Neon Local: Configure"
      },
      {
        "command": "neon-local.showPanel",
        "title": "Neon Local: Show Panel"
      },
      {
        "command": "neon-local.stopProxy",
        "title": "Neon Local: Stop Proxy"
      },
      {
        "command": "neon-local.clearAuth",
        "title": "Neon Local: Clear Authentication"
      },
      {
        "command": "neon-local.openSqlEditor",
        "title": "Neon Local: Open SQL Editor"
      },
      {
        "command": "neon-local.openTableView",
        "title": "Neon Local: Open Table View"
      },
      {
        "command": "neon-local.launchPsql",
        "title": "Neon Local: Launch PSQL"
      }
    ],
    "configuration": {
      "title": "Neon Local",
      "properties": {
        "neonLocal.apiKey": {
          "type": "string",
          "description": "API key for Neon authentication",
          "scope": "application"
        },
        "neonLocal.refreshToken": {
          "type": "string",
          "description": "Refresh token for Neon authentication",
          "scope": "application"
        },
        "neonLocal.projectId": {
          "type": "string",
          "description": "Selected Neon project ID",
          "scope": "application"
        },
        "neonLocal.driver": {
          "type": "string",
          "enum": [
            "postgres",
            "serverless"
          ],
          "default": "postgres",
          "description": "Database driver to use",
          "scope": "application"
        },
        "neonLocal.deleteOnStop": {
          "type": "boolean",
          "default": false,
          "description": "Whether to delete the container when stopping the proxy",
          "scope": "application"
        },
        "neonLocal.connectionType": {
          "type": "string",
          "enum": [
            "existing",
            "new"
          ],
          "default": "existing",
          "description": "Type of connection to create",
          "scope": "application"
        },
        "neonLocal.persistentApiToken": {
          "type": "string",
          "description": "Persistent API token for creating new branches",
          "scope": "application"
        },
        "neonLocal.workspacePath": {
          "type": "string",
          "description": "Absolute path to the workspace root directory"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neon-local",
          "title": "Neon Local",
          "icon": "resources/neon_logo.svg"
        }
      ]
    },
    "views": {
      "neon-local": [
        {
          "type": "webview",
          "id": "neonLocalConnect",
          "name": "Connect"
        },
        {
          "type": "webview",
          "id": "neonLocalDatabase",
          "name": "Local Connection Details"
        }
      ]
    },
    "menus": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.38",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/opener": "^1.4.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-electron": "^2.5.2",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "constants-browserify": "^1.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.10.0",
    "eslint": "^8.54.0",
    "glob": "^11.0.2",
    "https-browserify": "^1.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "mocha": "^11.3.0",
    "node-loader": "^2.1.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "sinon": "^20.0.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/vscode": "^1.87.0",
    "@vscode/codicons": "^0.0.35",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.6.7",
    "dockerode": "^4.0.2",
    "opener": "^1.5.2",
    "openid-client": "^5.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
